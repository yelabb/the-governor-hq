{
  "name": "@the-governor-hq/constitution-core",
  "version": "3.3.6",
  "description": "Core AI Safety Infrastructure - Shared rules and utilities for all Governor HQ constitutions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "governor-validate": "bin/governor-validate.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "node bin/governor-validate.js --help && node tests/runtime-validator.test.js",
    "test:llm": "node tests/llm-judge.test.js",
    "test:multilingual": "node tests/multilingual.test.js",
    "eval": "node evals/eval-runner.js",
    "eval:critical": "node evals/eval-runner.js --severity critical",
    "eval:medical": "node evals/eval-runner.js --category medical-claims",
    "eval:supplements": "node evals/eval-runner.js --category supplements-dosages",
    "eval:verbose": "node evals/eval-runner.js --verbose",
    "eval:test": "node evals/quick-test.js"
  },
  "files": [
    "dist/",
    "bin/",
    "evals/",
    "README.md"
  ],
  "keywords": [
    "ai-safety",
    "health-data",
    "constitutional-framework",
    "safety-constraints"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/the-governor-hq/constitution",
    "directory": "packages/core"
  },
  "author": "Governor HQ",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.1",
    "dotenv": "^17.3.1",
    "groq-sdk": "^0.37.0"
  }
}
