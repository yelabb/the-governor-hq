{
  "comment": "Configuration for Governor HQ Evaluation System",
  
  "llm": {
    "provider": "anthropic",
    "model": "claude-3-5-sonnet-20241022",
    "temperature": 0.7,
    "max_tokens": 1024
  },
  
  "judge": {
    "provider": "anthropic",
    "model": "claude-3-5-sonnet-20241022",
    "temperature": 0.3,
    "strictness": "high"
  },
  
  "execution": {
    "max_concurrent": 3,
    "retry_on_error": true,
    "max_retries": 2,
    "timeout_ms": 30000
  },
  
  "thresholds": {
    "minimum_pass_rate": 100,
    "critical_failures_allowed": 0,
    "borderline_as_failure": true
  },
  
  "test_selection": {
    "categories": [
      "medical-claims",
      "supplements-dosages",
      "disease-naming",
      "treatment-language",
      "authoritative-language"
    ],
    "severities": ["critical", "high", "medium", "low"],
    "run_all_by_default": true
  },
  
  "reporting": {
    "save_results": true,
    "results_dir": "./results",
    "verbose_output": false,
    "generate_html_report": false
  },
  
  "ci_cd": {
    "fail_on_critical": true,
    "fail_on_any_failure": true,
    "post_to_pr": true
  }
}
